<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.bx.dao.WorktypeDao">
    
	<sql id="worktypeColumns">
		a.id AS "id",
		a.name AS "name"
	</sql>
	
	<sql id="worktypeJoins">
	</sql>
    
	<select id="get" resultType="Worktype">
		SELECT 
			<include refid="worktypeColumns"/>
		FROM worktype a
		<include refid="worktypeJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="Worktype">
		SELECT 
			<include refid="worktypeColumns"/>
		FROM worktype a
		<include refid="worktypeJoins"/>
		<where>
			
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="Worktype">
		SELECT 
			<include refid="worktypeColumns"/>
		FROM worktype a
		<include refid="worktypeJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO worktype(
			id,
			name
		) VALUES (
			#{id},
			#{name}
		)
	</insert>
	
	<update id="update">
		UPDATE worktype SET 	
			name = #{name}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM worktype
		WHERE id = #{id}
	</update>
	
</mapper>